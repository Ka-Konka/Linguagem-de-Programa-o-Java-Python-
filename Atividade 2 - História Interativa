nome = 'Kaio'
cidade = 'Grécia'
polis = 'Atenas'
filósofo_1 = 'Aristóteles'
filósofo_2 = 'Platão'

print(f'O Historiador {nome} estava viajando pelas ruas da {cidade} e foi transportado para o passado. Quando percebeu o que aconteceu, notou que estava em {polis} e encontou com {filósofo_1} e {filósofo_2}, que estavam em um "duelo de ideias". Ao notar a presença do homem estranho, começaram a questioná-lo sobre onde veio.')
